<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.abc.code.wight.CustomTitleBar
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:leftImage="@mipmap/icon_back"
        app:middleTextColor="@color/white"
        app:middleTextSize="@dimen/dp_20"
        app:middleTitle="数据展示" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.abc.code.wight.CustomMeterViewTmeper
            android:id="@+id/clockTemperature"
            android:layout_width="200dp"
            android:layout_height="200dp" />


        <com.abc.code.wight.CustomMeterViewKongQi
            android:id="@+id/clockKongQi"
            android:layout_width="200dp"
            android:layout_height="200dp" />


    </LinearLayout>

    <com.abc.code.wight.CustomMeterViewCo2
        android:layout_gravity="center"
        android:id="@+id/clockCo2"
        android:layout_width="200dp"
        android:layout_height="200dp" />


</LinearLayout>